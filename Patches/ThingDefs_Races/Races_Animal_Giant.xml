<?xml version="1.0" encoding="utf-8" ?>

<!-- NOTE: The amount of weight an animal can carry is not configurable outside of an Assembly modification -->

<Patch>

  <!-- Rhinoceros Patch -->
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/ThingDef[defName="Rhinoceros"]/race/packAnimal</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Rhinoceros"]/race</xpath>
        <value>
          <packAnimal>true</packAnimal>
        </value>
      </li>
    </operations>
  </Operation>

  <!-- Megasloth Patch -->
